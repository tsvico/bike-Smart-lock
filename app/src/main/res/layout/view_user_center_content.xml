<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/id_tv_netfail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:drawableStart="@drawable/network_unavailable_ic"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:text="网络无法连接，请检查网络连接"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <include layout="@layout/divider"/>

    <com.tsvico.mobike.views.MySettingView
        android:id="@+id/tv_my_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTvText="我的钱包"
        app:rightTvText="0.0元"
        app:showRightTv="true"/>

    <include layout="@layout/divider"/>


    <com.tsvico.mobike.views.MySettingView
        android:id="@+id/tv_my_stickers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTvText="我的贴纸"
        />

    <include layout="@layout/divider"/>

    <com.tsvico.mobike.views.MySettingView
        android:id="@+id/tv_my_mymassege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTvText="我的消息"
        />

    <include layout="@layout/divider"/>

    <com.tsvico.mobike.views.MySettingView
        android:id="@+id/tv_my_invent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTvText="邀请好友"
        />

    <include layout="@layout/divider"/>

    <com.tsvico.mobike.views.MySettingView
        android:id="@+id/tv_my_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTvText="设置"
        />
    <include layout="@layout/divider"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"/>

</LinearLayout>