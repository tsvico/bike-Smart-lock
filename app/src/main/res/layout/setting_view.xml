<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:background="@drawable/setting_bg"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_margin="10dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:text="我的钱包"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_ringht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="100块"
        android:textColor="@color/smssdk_gray"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/indicate"
        android:src="@drawable/news_content_with_count_background"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ringht"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/indicate"
        android:background="@drawable/avatar_bg"
        android:src="@drawable/avatar_default_login"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/indicate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_marginRight="10dp"

        android:src="@drawable/list_item_indicator"/>
</RelativeLayout>